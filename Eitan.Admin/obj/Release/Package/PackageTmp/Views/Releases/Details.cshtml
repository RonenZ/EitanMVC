@model Eitan.Models.Release

@{
    ViewBag.Title = Model.Title;
}

<!-- Release Single Wrapper -->
<div id="release-single-wrap">
    <!-- Release Info Div -->
    <div id="release-info">
        <div class="details-left-image-container">
            <img class="details-left-image" src="~/Images/News/@Model.MainImage" alt="@Model.Title" title="@Model.Title" />
        </div>
        <div class="details-right-content">
            <div id="details-release-artist" class="details-title">@Model.Title</div>
            <br />
            <div id="details-release-title" class="details-subtitle">@Model.Title</div>
            <div id="details-release-content" class="details-content">
                @Html.Raw(Model.Content)
            </div>
            <div id="details-release-add-info" class="details-additional-info">
                <div class="details-property-div"><span class="property-type">Style:</span>bla</div>
                <div class="details-property-div"><span class="property-type">Released:</span>@Model.Date_Release.ToString("dd/MM/yyyy")</div>
                <div class="details-property-div"><span class="property-type">Format:</span></div>
                <div class="details-property-div"><span class="property-type">Cat-No:</span>@Model.CategoryNum</div>
                <div class="details-property-div"><span class="property-type">Barcode:</span>123456</div>
            </div>
        </div>
    </div>
    <!-- END Release Info Div -->

    <!-- Release Tracks List -->
    <div id="release-track-list">
        <div class="release-track-count">@Model.Songs.Count tracks total</div>
        @foreach (var song in Model.Songs)
        {
            <div class="release-track-div">
                <div class="release-track-title">
                    @song.Title
                </div>
            </div>
        }
    </div>
    <!-- END Release Tracks List -->

    <!-- FB Comments -->
    @Html.Partial("_FBComments")
    <!-- END FB Comments -->
</div>
