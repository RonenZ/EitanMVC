@model Eitan.Models.SEO
@if (Model != null)
{
    <!-- Start SEO -->
    <!-- Search engines Meta Tags: -->
    <meta name="title" content="@Model.metaTitle" />
    <meta name="keywords" content="@Model.metaKeywords" />
    <meta name="description" content="@Model.metaDescription" />
    if (Model.ogImage != null)
    {
        var images = Model.ogImage.Split(';');
        foreach (var img in images)
        {
            if (string.IsNullOrEmpty(img)) { continue; }
    <meta name="image" content="http://@(Request.Url.Host + "/Images/SEO/" + img)" />
        }
    }
    <!-- Facebook/OpenGraph Tags: -->
    <meta property="og:site_name" content="eitan reiter" />
    <meta property="og:title" content="@Model.ogTitle" />
    <meta property="og:description" content="@Model.ogDescription" />    
    if (Model.ogImage != null)
    {
        var images = Model.ogImage.Split(';');
        foreach (var img in images)
        {
            if (string.IsNullOrEmpty(img)) { continue; }
    <meta property="og:image" content="http://@(Request.Url.Host + "/Images/SEO/" + img)" />
        }
    }

}
    <!-- END SEO -->
