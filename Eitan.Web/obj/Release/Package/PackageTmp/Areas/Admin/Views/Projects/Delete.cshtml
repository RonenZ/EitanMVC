@model Eitan.Models.Project

@{
    ViewBag.Title = "מחיקת פרוייקט";
}

<h2>מחיקת פרוייקט</h2>

<h3>בטוח שאתה רוצה למחוק את?</h3>
<fieldset>
    <legend>פרוייקט</legend>

    <div class="display-label">כותרת</div>
    <div class="display-field">@Model.Title</div>

    @{ string imageVal = ""; }
    @if (Model != null && !string.IsNullOrEmpty(Model.MainImage))
    {
        imageVal = Model.MainImage;
        <a href="/Images/Projects/@imageVal" target="_blank">
        <img src="/Images/Projects/@Model.MainImage"  class="admin-prev-image" alt="@Model.MainImage" title="@Model.MainImage" />
        </a>
    }
    <div class="display-label">תאריך</div>
    <div class="display-field">@Model.Date_Creation.ToString("dd/MM/yyyy")</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("בחזרה לדיסקוגרפיה", "Index")
    </p>
}


