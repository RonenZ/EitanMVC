@model IEnumerable<Eitan.Models.Song>

<p>
    @Html.ActionLink("הוספת שיר חדש", "CreateSong", new {  RelId = ViewBag.RelID })
</p>
    <table>
    <thead>
        <tr>
            <th></th>
            <th>כותרת</th>
            <th>תאריך</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            <tr class="@{if ((i++ % 2) == 0)
                         {<text>normal-tr-item</text>}
                         else
                         {<text>alternate-tr-item</text>}}">
                <td>
                    @Html.ActionLink("עריכה", "EditSong", new { id = item.ID, RelID = ViewBag.RelID  }) |
                    @Html.ActionLink("מחיקה", "DeleteSong", new { id = item.ID, RelID = ViewBag.RelID})
                </td>
                <td width="250">
                    @item.Title
                </td>
                <td>

                    @item.Date_Creation.ToString("dd/MM/yyyy")
                </td>
            </tr>
        }
    </tbody>
</table>
