@model Eitan.Models.Genre

@{
    ViewBag.Title = "מחיקת סגנון";
}

<h2>מחיקת סגנון</h2>

<h3>בטוח שאתה רוצה למחוק את הסגנון הזה?</h3>
<fieldset>
    <legend>סגנון</legend>



    <div class="display-label">כותרת</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">תאריך</div>
