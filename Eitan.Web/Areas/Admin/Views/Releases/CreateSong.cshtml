@model Eitan.Models.Song

@{
    ViewBag.Title = "הוספת שיר";
}

<h2>הוספת שיר</h2>

@using (Html.BeginForm("CreateSong", "Releases", FormMethod.Post, new { enctype = "multipart/form-data" })){
    @Html.ValidationSummary(true)


    <div class="editor-label">
    כותרת:
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title)
</div>

    
    <div class="editor-label">
        סגנון:
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.GenreID, new SelectList((IEnumerable<Eitan.Models.Genre>)ViewBag.Genres, "ID", "Title"))
        @Html.ValidationMessageFor(model => model.GenreID)
    </div>

    <div class="editor-label">
        העלאת קובץ:
    </div>
    <div class="editor-field">
        <span class="admin-info-span">
        </span>
        <input type="file" name="UploadedFile" id="UploadedFile" />
    </div>    
    
    <div class="editor-label">
        סאונדקלאוד:
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.SoundCloudID)
        @Html.ValidationMessageFor(model => model.SoundCloudID)
    </div>    
    <div class="editor-label">
        האם סט:
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.isSoundCloudSet)
    </div>  

    @Html.Hidden("HdnRelID", (int)ViewBag.RelId)

        <p>
            <input type="submit" value="הוספה" />
        </p>
}

<div>
    @Html.ActionLink("בחזרה לעמוד דיסקוגרפיה", "Edit", "Releases", new { ID = ViewBag.RelId})
</div>
