@model Eitan.Models.Project
@* This partial view defines form fields that will appear when creating and editing entities *@


<link href="~/Areas/Admin/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/themes/base/jquery.ui.datepicker.css" rel="stylesheet" />
<script src="~/Areas/Admin/Scripts/jquery-ui-1.8.20.min.js"></script>

<div class="editor-label">
    כותרת:
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title)
</div>

<div class="editor-label">
    תוכן:
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Content)
    @Html.ValidationMessageFor(model => model.Content)
</div>

<div class="editor-label">
    תאריך הפרוייקט:
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Date_Creation)
    @Html.ValidationMessageFor(model => model.Date_Creation)
</div>


<div class="editor-label">
    לקוח :
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ClientID, (IEnumerable<SelectListItem>)ViewBag.Clients)
    @Html.ValidationMessageFor(model => model.ClientID)
</div>

<div class="editor-label">
    סוג פרוייקט:
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.TypeID, (IEnumerable<SelectListItem>)ViewBag.ProjectTypes)
    @Html.ValidationMessageFor(model => model.TypeID)
</div>

<div class="editor-label">
    וידאו:
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.VideoPath)
    @Html.ValidationMessageFor(model => model.VideoPath)
</div>

<div class="editor-label">
    תמונה:
</div>
<div class="editor-field">
    <span class="admin-info-span">
    </span>
    <span class="span-info">Image Size: 640px X 310px</span>
    @{ string imageVal = ""; }
    @if (Model != null && !string.IsNullOrEmpty(Model.MainImage))
    {
        imageVal = Model.MainImage;
        <a href="/Images/Projects/@imageVal" target="_blank">
        <img src="/Images/Projects/@Model.MainImage"  class="admin-prev-image" alt="@Model.MainImage" title="@Model.MainImage" />
        </a>
    }
    <input type="hidden"  name="MainImage" id="MainImage" value="@imageVal" />
    @*<span class="span-info">Image Size Up to: 413px X 413px</span>*@
    <input type="file" name="UploadedImage" id="UploadedImage" />
</div>

<div class="editor-label">
    קישור חיצוני:
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Link_External)
    @Html.ValidationMessageFor(model => model.Link_External)
</div>



<script type="text/javascript">
    $(document).ready(function () {        generateTinyMCE('#Content');
    });
    $("#Date_Creation").datepicker({
        dateFormat: 'dd-mm-yy',
        changeMonth: true,
        changeYear: true
    });
</script>
