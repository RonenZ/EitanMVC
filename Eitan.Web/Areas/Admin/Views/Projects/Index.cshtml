@model PagedList.IPagedList<Eitan.Models.Project>

@using Eitan.Web.Models
@{
    ViewBag.Title = "פרוייקטים";
}

<h2>פרוייקטים</h2>

<p>
    @Html.ActionLink("שינוי סדר", "Priority")
</p>
<p>
    @Html.ActionLink("הוספת פרוייקט", "Create")
</p>
    @Html.Partial("_Search")
    @Html.Partial("_Paging")
<table>
    <thead>
        <tr>
            <th></th>
            <th>תמונה
            </th>
            <th>כותרת
            </th>
            <th>תקציר
            </th>
            <th>תאריך 
            </th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
        
            <tr class="@{if ((i++ % 2) == 0)
                         {<text>normal-tr-item</text>}
                         else
                         {<text>alternate-tr-item</text>}} ">
                <td class="td-edit">
                    @Html.ActionLink("עריכה", "Edit", new { id = item.ID }) |
                @Html.ActionLink("מחיקה", "Delete", new { id = item.ID })
                </td>
                <td>
                    <img class="table-list-img" src="/Images/Projects/thumb_@item.MainImage" alt="@item.Title" title="@item.Title" />
                </td>
                <td width="250">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td width="350">
                    @item.Content.The_Excerpt(200)...
                </td>
                <td>
                    @item.Date_Creation.ToString("dd/MM/yyyy")
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_Paging")