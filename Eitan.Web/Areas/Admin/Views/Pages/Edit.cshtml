@model Eitan.Models.Page
@using Eitan.Web.Models
@{
    ViewBag.Title = Model.Title;
}

<h2>עריכת @Model.Title</h2>

@using (Html.BeginForm("Edit", "Pages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)
    @Html.Partial("_SEOInput", Model.SEO.NullToSEO())
    @Html.Partial("_CreateOrEdit", Model)
    <p>
        <input type="submit" value="שמירה" />
    </p>
}

<div>
    @Html.ActionLink("בחזרה לעמודי תוכן", "Index")
</div>
