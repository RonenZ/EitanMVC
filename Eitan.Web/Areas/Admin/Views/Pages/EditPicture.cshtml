@model Eitan.Models.Picture

@{
    ViewBag.Title = "עריכת תמונה";
}

<h2>עריכת תמונה</h2>

@using (Html.BeginForm("EditPicture", "Pages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)


    <div class="editor-label">
        כותרת:
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    
    
<div class="editor-label">
    תמונה:
</div>
<div class="editor-field">
    <span class="admin-info-span">
    </span>
    @{ string imageVal = ""; }
    @if (Model != null && !string.IsNullOrEmpty(Model.Source))
    {
        imageVal = Model.Source;
        <a href="/Images/Pages/@imageVal" target="_blank">
        <img src="/Images/Pages/@Model.Source"  class="admin-prev-image" alt="@Model.Title" title="@Model.Title" />
        </a>
    }
    <input type="hidden"  name="Source" id="Source" value="@imageVal" />
    <div class="clear"></div>
    @*<span class="span-info">Image Size Up to: 865px X 487px</span>*@
    <input type="file" name="UploadedImage" id="UploadedImage" />
</div>
    
    @Html.Hidden("HdnPageID", (int)ViewBag.PageID)

        <p>
            <input type="submit" value="שמירה" />
        </p>
}

<div>
    @Html.ActionLink("בחזרה לעמוד התוכן", "Edit", "Pages", new { ID = ViewBag.PageID})
</div>
